<Button x:Class="HelppoLasku.Views.Controls.SendButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelppoLasku.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20"
        
        Focusable="True"
        DataContext="{Binding Send}"
        Command="{Binding Command}"
        ToolTip="{Binding ToolTip}"
        Visibility="{Binding Visibility}"
        
        MaxHeight="18" MaxWidth="18" Padding="1"
        
        Background="Transparent" BorderBrush="Transparent">

    <Button.Style>
        <Style TargetType="Button">
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Button.Style>

    <Image Source="/Images/envelope_white.png"/>
</Button>
