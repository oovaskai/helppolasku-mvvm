<UserControl x:Class="HelppoLasku.Views.Controls.ListButtonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HelppoLasku.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    
    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">

        <local:AddButton Margin="2,0,1,0" />

        <local:EditButton Margin="1,0,1,0" />

        <local:CopyButton Margin="1,0,1,0" />

        <local:DeleteButton Margin="1,0,2,0" />

    </StackPanel>
    
</UserControl>
